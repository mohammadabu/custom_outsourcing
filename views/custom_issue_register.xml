<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="project_issue_register_action" model="ir.actions.act_window">
            <field name="name">Project Issue Register</field>
            <field name="res_model">project.project.issue.register</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Define a new on Issue Register
              </p>
            </field>
        </record>
        <record id='custom_project_issue_register_action_form' model='ir.ui.view'>
            <field name='name'>custom project issue register action form</field>
            <field name='model'>project.project.issue.register</field>
            <field name='arch' type='xml'>
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name='issueID'/>
                                <field name='name'/>
                                <field name='owner'/>
                                <field name='project_id' required="1" attrs="{'invisible':[('active_id', '!=', False),('active_id', '!=', 0)]}"/>
                                <field name="active_id" invisible="1" />
                                <field name="hide_report"/>
                            </group>
                            <group>
                                <field name='due_date'/>
                                <field name='status'/>
                                <field name='resolution'/>
                                <field name='date_of_resolution'/>
                            </group>
                        </group>
                    </sheet>
                </form>            
            </field>
        </record>
        <record id='custom_project_issue_register_action_tree' model='ir.ui.view'>
            <field name='name'>custom project issue register action tree</field>
            <field name='model'>project.project.issue.register</field>
            <field name='arch' type='xml'>
                <tree string="Issue Register" decoration-success="status=='Resolved'" decoration-danger="status=='Not resolved'" >
                    <field name='issueID'/>
                    <field name='name'/>
                    <field name='owner'/>
                    <field name='project_id'/>
                    <field name='due_date'/>
                    <field name='status'/>
                    <field name='resolution'/>
                    <field name='date_of_resolution'/>
                </tree>             
            </field>
        </record>  
        <menuitem
                id="custom_menu_project_issue_register"
                action="project_issue_register_action"
                parent="project.menu_project_config"
                sequence="12"
                name="Issue Register"
        />
    </data>
</odoo>    






            









